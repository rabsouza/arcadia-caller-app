<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/element_vertical_margin"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/element_horizontal_margin"
    android:paddingRight="@dimen/element_horizontal_margin">

    <ImageView
        android:id="@+id/item_scenery_action"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/ic_play" />

    <TextView
        android:id="@+id/item_scenery_name"
        style="@style/ItemHeadStyle"
        android:text="Cenario 02 da campanha base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
