<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.battista.arcadiacaller.fragment.detail.CampaignDetailHeroesFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fab_margin_bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/detail_card_view_heroes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/no_dimen"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:padding="@dimen/element_padding">

                    <TextView
                        android:id="@+id/detail_card_view_heroes_title"
                        style="@style/CardTitle02Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_detail_heroes" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/detail_card_view_heroes_guild_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/no_dimen"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:orientation="vertical"
                            android:padding="@dimen/element_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/detail_card_view_heroes_guild_blue_img"
                                    android:layout_width="@dimen/item_img_width"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_marginTop="@dimen/element_horizontal_margin"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:id="@+id/detail_card_view_heroes_guild_blue_title"
                                    style="@style/CardTitle02Style"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal|bottom"
                                    android:text="@string/hint_detail_heroes_guild_blue_title" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:background="@color/gray" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_blue_hero_01"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_01"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_blue_hero_02"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_02"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_blue_hero_03"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_03"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/detail_card_view_heroes_guild_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/no_dimen"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:orientation="vertical"
                            android:padding="@dimen/element_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/detail_card_view_heroes_guild_green_img"
                                    android:layout_width="@dimen/item_img_width"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_marginTop="@dimen/element_horizontal_margin"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:id="@+id/detail_card_view_heroes_guild_green_title"
                                    style="@style/CardTitle02Style"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal|bottom"
                                    android:text="@string/hint_detail_heroes_guild_green_title" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:background="@color/gray" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_green_hero_01"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_01"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_green_hero_02"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_02"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_green_hero_03"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_03"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/detail_card_view_heroes_guild_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/no_dimen"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:orientation="vertical"
                            android:padding="@dimen/element_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/detail_card_view_heroes_guild_red_img"
                                    android:layout_width="@dimen/item_img_width"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_marginTop="@dimen/element_horizontal_margin"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:id="@+id/detail_card_view_heroes_guild_red_title"
                                    style="@style/CardTitle02Style"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal|bottom"
                                    android:text="@string/hint_detail_heroes_guild_red_title" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:background="@color/gray" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_red_hero_01"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_01"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_red_hero_02"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_02"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_red_hero_03"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_03"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/detail_card_view_heroes_guild_orange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/no_dimen"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:orientation="vertical"
                            android:padding="@dimen/element_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/detail_card_view_heroes_guild_orange_img"
                                    android:layout_width="@dimen/item_img_width"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_marginTop="@dimen/element_horizontal_margin"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:id="@+id/detail_card_view_heroes_guild_orange_title"
                                    style="@style/CardTitle02Style"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/item_img_height"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal|bottom"
                                    android:text="@string/hint_detail_heroes_guild_orange_title" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:background="@color/gray" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_orange_hero_01"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_01"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_orange_hero_02"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_02"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                android:id="@+id/detail_card_view_heroes_guild_orange_hero_03"
                                style="@style/InputStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_detail_heroes_guild_hero_03"
                                android:textColorHint="@color/colorAccent"
                                app:met_floatingLabel="highlight" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_next_heroes_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_anchor="@id/detail_scroll_view"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@drawable/ic_next" />


</android.support.design.widget.CoordinatorLayout>
