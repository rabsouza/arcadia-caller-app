<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:id="@+id/card_view_hero"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:padding="@dimen/no_dimen"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardElevation="1dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="true"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_card_view_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_hero_title"
            style="@style/CardTitle02Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_padding"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/element_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_view_hero_group"
                    style="@style/CardTextBoldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_vertical_margin"
                    android:paddingLeft="@dimen/activity_padding"/>

                <TextView
                    android:id="@+id/card_view_hero_ability"
                    style="@style/CardTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding"
                    android:paddingLeft="@dimen/activity_padding"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_vertical_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_view_hero_life"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:paddingLeft="@dimen/activity_padding"
                        android:paddingRight="@dimen/activity_padding"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:id="@+id/card_view_hero_defense"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:paddingLeft="@dimen/activity_padding"
                        android:paddingRight="@dimen/activity_padding"
                        android:scaleType="fitXY"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/card_view_hero_img_hero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>