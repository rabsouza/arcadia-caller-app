<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:id="@+id/card_view_hero"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/no_dimen"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:padding="@dimen/no_dimen"
                                    app:cardElevation="3dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="false"
                                    card_view:cardCornerRadius="0dp"
                                    card_view:cardElevation="6dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_card_view_height"
        android:scaleType="fitXY"
        android:src="@drawable/background_hero"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_card_view_height"
        android:padding="@dimen/activity_padding">

        <TextView
            android:id="@+id/card_view_hero_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardTitle"
            android:textSize="34sp"
            android:textStyle="bold"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_view_hero_img_hero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"/>


        <ImageView
            android:id="@+id/card_view_hero_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_hero_title"
            android:padding="@dimen/activity_padding"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/card_view_hero_defense"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/card_view_hero_title"
            android:layout_toRightOf="@id/card_view_hero_life"
            android:padding="@dimen/activity_padding"
            android:scaleType="center"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>